<div class="container">
  <div class="row">
    <div class="col-md-3">
         <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
        <tr>
      	  <th>name</th>
      	  <th><%=@user.name%></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%=@user.introduction%></th>
        </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user.id) do %>
        <button type="button" class="btn btn-secondary btn-lg"><i class="fa-solid fa-user-cog"></i></button>
      <% end %>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table>
        <thred>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thred>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <br><%= book.user.name %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>