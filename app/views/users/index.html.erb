<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
        <tr>
      	  <th>name</th>
      	  <th><%=@user.name%></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%=@user.introduction%></th>
        </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user.id) do %>
        <button type="button" class="btn btn-secondary btn-lg"><i class="fa-solid fa-user-cog"></i></button>
      <% end %>
      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td><%= user.name %><td>
        <td><%= link_to"Show",user_path(user.id) %></td>
      </tr>
      <% end %>
      </tbody>
    </div>
  </div>
</div>