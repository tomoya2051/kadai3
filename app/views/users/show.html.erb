<%= flash[:notice] %>
<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<h5>name</h5>
<%=@user.name%>
<h5>introduction</h5>
<%=@user.introduction%>
<%= link_to"編集",edit_user_path(@user.id)%>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <thred>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thred>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>